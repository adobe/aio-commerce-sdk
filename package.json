{
  "name": "@adobe/aio-commerce-sdk",
  "private": true,
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky",
    "turbo": "turbo",
    "check:format": "biome check --linter-enabled=false --no-errors-on-unmatched",
    "check:types": "turbo check:types",
    "format": "biome format --write --no-errors-on-unmatched",
    "lint": "biome check --formatter-enabled=false --no-errors-on-unmatched",
    "lint:fix": "biome lint --write --no-errors-on-unmatched",
    "test": "turbo test",
    "build": "turbo build",
    "test:affected": "TURBO_SCM_BASE=origin/main turbo test --affected",
    "build:affected": "TURBO_SCM_BASE=origin/main turbo build --affected",
    "check:affected": "TURBO_SCM_BASE=origin/main turbo check:format check:types lint test build --affected",
    "ls:affected": "TURBO_SCM_BASE=origin/main turbo ls --affected",
    "pkg:lib-auth": "turbo --filter=@adobe/aio-commerce-lib-auth",
    "pkg:sdk": "turbo --filter=@adobe/aio-commerce-sdk",
    "pkg:generators": "pnpm --filter=@aio-commerce-sdk/generators"
  },
  "devDependencies": {
    "@biomejs/biome": "2.0.5",
    "@changesets/cli": "^2.29.5",
    "@turbo/gen": "^2.5.4",
    "@types/node": "^24.0.4",
    "husky": "^9.1.7",
    "tsdown": "^0.12.9",
    "turbo": "^2.5.4",
    "typescript": "^5.8.3",
    "ultracite": "5.0.25"
  },
  "packageManager": "pnpm@10.4.1",
  "lint-staged": {
    "*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": [
      "biome check --write --no-errors-on-unmatched --files-ignore-unknown=true --error-on-warnings"
    ],
    "*": [
      "biome check --no-errors-on-unmatched --files-ignore-unknown=true --error-on-warnings"
    ]
  }
}

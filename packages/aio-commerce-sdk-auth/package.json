{
  "name": "@adobe/aio-commerce-sdk-auth",
  "version": "0.1.0",
  "description": "Authentication utilities for Adobe Commerce apps deployed in Adobe AppBuilder.",
  "license": "Apache-2.0",
  "keywords": [
    "aio",
    "adobe-io",
    "commerce",
    "adobe-commerce",
    "adobe-ims"
  ],
  "author": "Adobe Inc.",
  "main": "./dist-cjs/index.js",
  "module": "./dist-es/index.js",
  "types": "./dist-types/index.d.ts",
  "dependencies": {
    "oauth-1.0a": "^2.2.6",
    "simple-oauth2": "^5.1.0"
  },
  "scripts": {

{
  "name": "@adobe/aio-commerce-sdk",
  "version": "1.0.0",
  "author": "Adobe Inc.",
  "engines": {
    "node": ">=22"
  },

  "license": "Apache-2.0",
  "description": "Utilities for Adobe Commerce apps deployed in Adobe App Builder.",
  "keywords": [
    "aio",
    "adobe-io",
    "commerce",
    "adobe-commerce"
  ],

  "bugs": {
    "url": "https://github.com/adobe/aio-commerce-sdk/issues"
  },

  "repository": {
    "type": "git",
    "url": "https://github.com/adobe/aio-commerce-sdk.git"
  },

  "main": "./dist/cjs/index.js",
  "module": "./dist/es/index.mjs",
  "types": "./dist/es/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/es/index.mjs",
      "require": "./dist/cjs/index.js"
    },
    "./auth": {
      "import": "./dist/es/auth.mjs",
      "require": "./dist/cjs/auth.js",
      "types": "./dist/es/auth.d.ts"
    },
    "./package.json": "./package.json"
  },

  "scripts": {
    "build": "tsdown",
    "check-types": "tsc --noEmit && echo 'âœ… No type errors found.'"
  },

  "dependencies": {
    "@adobe/aio-commerce-lib-auth": "workspace:*"
  },

  "devDependencies": {
    "tsdown": "^0.12.9",
    "@aio-commerce-sdk/config-typescript": "workspace:*"
  }
}

{
  "name": "@adobe/aio-commerce-sdk",
  "type": "module",
  "version": "0.1.0",
  "private": false,

  "author": "Adobe Inc.",
  "engines": {
    "node": ">=22"
  },

  "license": "Apache-2.0",
  "description": "Utilities for Adobe Commerce apps deployed in Adobe App Builder.",
  "keywords": [
    "aio",
    "adobe-io",
    "commerce",
    "adobe-commerce",
    "adobe-commerce-sdk",
    "aio-commerce-sdk"
  ],

  "bugs": {
    "url": "https://github.com/adobe/aio-commerce-sdk/issues"
  },

  "repository": {
    "type": "git",
    "url": "https://github.com/adobe/aio-commerce-sdk.git"
  },

  "main": "./dist/cjs/index.cjs",
  "module": "./dist/es/index.js",
  "types": "./dist/es/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/es/index.d.ts",
        "default": "./dist/es/index.js"
      },
      "require": {
        "types": "./dist/cjs/index.d.cts",
        "default": "./dist/cjs/index.cjs"
      }
    },
    "./auth": {
      "import": {
        "types": "./dist/es/auth.d.ts",
        "default": "./dist/es/auth.js"
      },
      "require": {
        "types": "./dist/cjs/auth.d.cts",
        "default": "./dist/cjs/auth.cjs"
      }
    },
    "./package.json": "./package.json"
  },

  "scripts": {
    "build": "tsdown",
    "check:format": "pnpm -w check:format .",
    "check:types": "tsc --noEmit && echo 'âœ… No type errors found.'",
    "format": "pnpm -w format .",
    "lint": "pnpm -w lint .",
    "lint:fix": "pnpm -w lint:fix ."
  },

  "dependencies": {
    "@adobe/aio-commerce-lib-auth": "workspace:*"
  },

  "devDependencies": {
    "@aio-commerce-sdk/config-typescript": "workspace:*",
    "@aio-commerce-sdk/config-tsdown": "workspace:*"
  },

  "sideEffects": false
}
